@model IEnumerable<GameForum.ApplicationLogic.Model.User>

@{
    ViewData["Title"] = "View";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

@{
    ViewBag.Title = "Delete User";
}

<h1>Delete Users</h1>

<div class="row">
    <div class="col-lg-12">
        <table class="table table-striped text-center">
            <thead>
                <tr>
                    <th>User</th>
                    <th>Email</th>
                    <th>Role</th>
                    <th>Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var user in Model)
                {
                <tr>
                    <td>@Html.Raw(user.Username)</td>
                    <td>@Html.Raw(user.Email)</td>
                    @if (user.IsAdmin == true)
                    {
                        <td>Admin</td>
                    }
                    else
                    {
                        <td>Normal User</td>
                    }
                <td>
                    @if (user.IsAdmin == false)
                    {
                        <a asp-action="AddToAdmin" asp-route-id="@user.ID" class="ActionButton">
                            <i class="far fa-eye"></i>
                        </a>
                    }
                    @if (user.IsAdmin == true)
                    {
                        <a asp-action="DowngradeUser" asp-route-id="@user.ID" class="ActionButton">
                            <i class="far fa-eye"></i>
                        </a>
                    }
                    <a asp-action="Delete" asp-route-id="@user.ID" class="ActionButton">
                        <i class="fas fa-trash"></i>
                    </a>
                </td>
                </tr>
                }
            </tbody>
        </table>
    </div>
</div>